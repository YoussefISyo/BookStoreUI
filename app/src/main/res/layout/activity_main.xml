<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEDF4"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="37dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#fff"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/titleExclusive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:text="Exclusively"
            android:textColor="#2E3691"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="6dp"
            android:text="24, Apr 2020"
            android:textColor="#9A9A9A"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleExclusive" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.158"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/itemSlide1"
                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="112dp"
                    android:layout_marginRight="24dp"
                    android:background="@drawable/bgitem"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="26dp"
                        android:src="@drawable/musso" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleBook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="30dp"
                            android:text="Central Park"
                            android:textColor="#FFF"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/authorBook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="4dp"
                            android:text="Guillaume Musso"
                            android:textColor="#A1A8FD"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/priceBook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="30dp"
                            android:text="1500 DZ"
                            android:textColor="#F6C128"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/itemSlide2"
                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="112dp"
                    android:layout_marginRight="24dp"
                    android:background="@drawable/bgitem"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="26dp"
                        android:src="@drawable/davinci" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleBook2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="30dp"
                            android:text="The DaVinci Code"
                            android:textColor="#FFF"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/authorBook2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="4dp"
                            android:text="Dan Brown"
                            android:textColor="#A1A8FD"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/priceBook2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="30dp"
                            android:text="3000 DZ"
                            android:textColor="#F6C128"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/itemSlide"
                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="112dp"
                    android:layout_marginRight="24dp"
                    android:background="@drawable/bgitem"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="26dp"
                        android:src="@drawable/elif_shafak" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleBook3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="30dp"
                            android:text="Fourty rules of Love"
                            android:textColor="#FFF"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/authorBook3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="4dp"
                            android:text="Elif Shafak"
                            android:textColor="#A1A8FD"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/priceBook3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="30dp"
                            android:text="2500 DZ"
                            android:textColor="#F6C128"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="30dp"
            android:text="You might like"
            android:textColor="#9A9A9A"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bgbooksnew"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:layout_editor_absoluteX="-15dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="140dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/bookone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:text="Dutch"
                    android:textColor="#2E3691"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="6dp"
                    android:text="The text that makes the design good and fit to used in any concept"
                    android:textColor="#9A9A9A"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bgbooksnew"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            tools:layout_editor_absoluteX="24dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="140dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/booktwo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:text="The world of abstract"
                    android:textColor="#2E3691"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="6dp"
                    android:text="The text that makes the design good and fit to used in any concept"
                    android:textColor="#9A9A9A"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bgbooksnew"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            tools:layout_editor_absoluteX="24dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="140dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/bookthree" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:text="Odds Live"
                    android:textColor="#2E3691"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="6dp"
                    android:text="The text that makes the design good and fit to used in any concept"
                    android:textColor="#9A9A9A"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>